<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/item_underOnlineActivity"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_activityAva"
            android:paddingLeft="1dp"
            android:src="@mipmap/cat"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_activityse"
            android:textSize="8dp"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 活动名 -->
        <TextView
            android:id="@+id/item_activityName"
            android:text="发士大夫士大夫发士大夫士大夫"
            android:textSize="@dimen/textsize"
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- 时间 -->
        <TextView
            android:id="@+id/item_activityTime"
            android:text="sdfdsf"
            android:textSize="@dimen/textsize"
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- 地点 -->
        <TextView
            android:id="@+id/item_activityPlace"
            android:text="sdfdsf"
            android:textSize="@dimen/textsize"
            android:singleLine="true"
            android:maxEms="15"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- 关键字 -->
        <LinearLayout
            android:id="@+id/item_keyWord"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="10dp">
            <ImageView
                android:src="@mipmap/mine_select"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/item_activityJoinsNum"
                android:text="11"
                android:textSize="@dimen/textsize"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:src="@mipmap/love"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/item_activityLoveNum"
                android:text="11"
                android:textSize="@dimen/textsize"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
