<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/xl_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/activity_people"
            app:riv_oval="true"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nickName"
                android:textSize="@dimen/textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈"/>
            <TextView
                android:id="@+id/talkTime"
                android:textSize="@dimen/textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-6-2"/>
        </LinearLayout>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/talkDelete"
            android:src="@mipmap/del"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/talkContent"
            android:textSize="@dimen/textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fdsfsfdfdsfdsfsdf" />

        <ImageView
            android:id="@+id/talkPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_below="@+id/talkContent"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/school"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="九江学院" />
        <LinearLayout
            android:id="@+id/sharing_topic"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/topic"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/sharing_topicName"
                android:text="fsdfdsf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/praise"
            android:gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="10dp"
            android:src="@mipmap/like"/>
        <ImageView
            android:id="@+id/reply"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="10dp"
            android:src="@mipmap/comment"/>

    </LinearLayout>
    <!--点赞前面的蓝色星星图标-->
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/xl_praise"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/praise"/>
    </com.nex3z.flowlayout.FlowLayout>
    <LinearLayout
        android:id="@+id/xl_Reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
