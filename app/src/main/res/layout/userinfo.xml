<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebeaec"
    tools:context="e.administrator.xy.activity.userInfoActivity">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:background="#5da8f9">
    <RelativeLayout
        android:id="@+id/tv_go_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:text="返回"
            android:textSize="@dimen/textsize"
            android:layout_centerVertical="true"
            android:textColor="@color/white" />
    </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:textSize="@dimen/textsize"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
                <TextView
                    android:id="@+id/tv_head_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <ImageView
                    android:id="@+id/iv_userPic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/activity_people"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="60dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tv_school"
                android:layout_marginEnd="29dp"
                android:background="#cecdce" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/et_nickName"
                    android:textSize="@dimen/textsize"
                    android:layout_toRightOf="@+id/tv_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <!--<EditText-->
                    <!--android:id="@+id/et_sex"-->
                    <!--android:textSize="@dimen/textsize"-->
                    <!--android:layout_toRightOf="@+id/tv_sex"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@null"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="20dp"/>-->
                <RadioGroup
                    android:id="@+id/userInfoSex"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/tv_sex"
                    android:background="@drawable/underline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="隐藏"
                        android:id="@+id/none"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:buttonTint="@drawable/radiobutton_textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="男"
                        android:id="@+id/man"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:buttonTint="@drawable/radiobutton_textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="女"
                        android:id="@+id/woman"
                        android:layout_weight="1"
                        android:textSize="@dimen/textsize"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:buttonTint="@drawable/radiobutton_textcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_borth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/et_birth"
                    android:textSize="@dimen/textsize"
                    android:layout_toRightOf="@+id/tv_borth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>

                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/et_school"
                    android:textSize="@dimen/textsize"
                    android:layout_toRightOf="@+id/tv_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_academy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学院"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/et_academy"
                    android:textSize="@dimen/textsize"
                    android:layout_toRightOf="@+id/tv_academy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/et_major"
                    android:textSize="@dimen/textsize"
                    android:layout_toRightOf="@+id/tv_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_hobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兴趣爱好"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/et_hobby"
                    android:layout_toRightOf="@+id/tv_hobby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:background="@color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>

                <TextView
                    android:id="@+id/tv_hometown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家乡"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />

                <EditText
                    android:id="@+id/et_hometown"
                    android:layout_toRightOf="@+id/tv_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_entry_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入学年份"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />
                <TextView
                    android:id="@+id/et_entryyear"
                    android:layout_toRightOf="@+id/tv_entry_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/textsize"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="55dp"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_perSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名"
                    android:textColor="@color/wordColor"
                    android:textSize="@dimen/textsize"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/et_persign"
                    android:layout_toRightOf="@+id/tv_perSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/textsize"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"
                    android:background="#cecdce"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
